<!DOCTYPE html>
<html lang="es">
<head>
    {{ encore_entry_script_tags('app') }}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        {% block title %}Red Musicfy{% endblock %}
    </title>
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        body {
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #333; /* Cambia el color de fondo como prefieras */
        }

        .loader {
            display: none; /* Ocultar inicialmente el loader */
            border: 8px solid #f3f3f3; /* Light grey */
            border-top: 8px solid red; /* Azul */
            border-radius: 50%;
            width: 80px; /* Tamaño del círculo */
            height: 80px; /* Tamaño del círculo */
            animation: spin 2s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
<div class="loader"></div>

<script>
    // Mostrar el loader después de que la página se haya cargado completamente
    window.addEventListener('load', function() {
        document.querySelector('.loader').style.display = 'block';
        
        // Redireccionar después de 5 segundos
        setTimeout(function(){
            window.location.href = "/";
        }, 5000);
    });
</script>
</body>
</html>