{% extends 'base.html.twig' %}

{% block title %}Error{% endblock %}

{% block body %}
    <div id="error-container" class="error-container">
        <h1>Oops! Algo salió mal.</h1>
        <p id="error-message">Lo sentimos, parece que hubo un error inesperado.</p>
        <p>Redireccionando en <span id="countdown">3</span> segundos...</p>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .error-container {
            padding: 20px;
            border-radius: 5px;
            background-color: #000;
            color: #ff6347; /* Rojo */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }
        p {
            font-size: 18px;
            margin-bottom: 20px;
        }
        #countdown {
            font-weight: bold;
            font-size: 24px;
            color: #ff6347; /* Rojo */
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Función para redireccionar después de un cierto tiempo
        function redirect(url) {
            setTimeout(function() {
                window.location.href = url;
            }, 3000); // 3 segundos
        }

        // Redirigir después de 3 segundos a la página principal
        redirect('/');
        
        // Actualizar el contador de tiempo restante cada segundo
        var countdown = document.getElementById('countdown');
        var timeLeft = 3;
        setInterval(function() {
            timeLeft--;
            countdown.textContent = timeLeft;
        }, 1000);
    </script>
{% endblock %}
